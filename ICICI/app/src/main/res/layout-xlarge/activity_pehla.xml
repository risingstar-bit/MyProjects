<?xml version="1.0" encoding="utf-8"?>


<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|fill_horizontal"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.icici.pehla_page">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="826dp"
                android:layout_height="240dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icicilogo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="569dp"
                android:layout_height="114dp"
                android:layout_marginTop="28dp"
                android:text="@string/login_to_internet_banking"
                android:textAlignment="viewStart"
                android:textColor="#260357"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:layout_editor_absoluteX="320dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="177dp"
                android:layout_height="87dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="28dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:srcCompat="@drawable/lockicon"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="845dp"
                android:layout_height="223dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:accessibilityLiveRegion="none"
                android:background="#5EE3DDDD"
                android:text="@string/welcome_to_icici_bank_fast_secure_online_kyc_app_here_you_can_complete_your_kyc_with_in_2_minutes_thank_you_to_join_icici_bank"
                android:textAlignment="textStart"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="336dp"
                android:layout_height="86dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="251dp"
                android:text="Mobile No.*"
                android:textColor="#260357"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.305"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="536dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="181dp"
                android:background="#5EE3DDDD"
                android:ems="10"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="336dp"
                android:layout_height="86dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="251dp"
                android:text="ATM PIN*"
                android:textColor="#260357"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.305"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextMobile" />

            <EditText
                android:id="@+id/editTextATMPIN"
                android:layout_width="536dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="181dp"
                android:background="#5EE3DDDD"
                android:ems="10"
                android:inputType="numberPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="336dp"
                android:layout_height="86dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="251dp"
                android:text="PAN Card*"
                android:textColor="#260357"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.314"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextATMPIN" />

            <EditText
                android:id="@+id/editTextPAN"
                android:layout_width="536dp"
                android:layout_height="108dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="181dp"
                android:background="#5EE3DDDD"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                android:id="@+id/button"
                android:layout_width="821dp"
                android:layout_height="92dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="156dp"
                android:layout_marginEnd="20dp"
                android:text="@string/login"
                android:textColor="#4E342E"
                android:textSize="50sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.525"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPAN"
                tools:ignore="TextContrastCheck,TextContrastCheck" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="907dp"
                android:layout_height="348dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:text="@string/safe_banking_never_share_your_user_id_password_or_any_other_information_with_anyone_on_phone_sms_or_email_icici_bank_does_not_call_email_customers_for_such_informations_beware_of_fraudsters_asking_for_such_details_posting_as_bank_staff"
                android:textAlignment="center"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.086"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="468dp"
                android:layout_height="81dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="242dp"
                android:layout_marginBottom="7dp"
                android:text="Rememeber"
                android:textSize="50sp"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.566"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPAN"
                app:layout_constraintVertical_bias="0.813" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
