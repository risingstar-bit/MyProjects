<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#191818"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#201C1C"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/einstein" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="379dp"
            android:layout_height="62dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/textview_bg"
            android:fontFamily="monospace"
            android:text="Albert Einstein"
            android:textColor="@color/purple_700"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Truth Quotes"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="34sp" />

        <View
            android:id="@+id/view"
            android:layout_width="195dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#171616"
            android:backgroundTint="#121111" />

        <TextView
            android:id="@+id/quotes"
            android:layout_width="399dp"
            android:layout_height="72dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="Life is like riding bicycle. To keep your balance, you must keep moving."
            android:textColor="#EEF8F0F0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/shares"
            android:text="share"
            android:textAlignment="viewStart"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>